<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
	
	

<configuration>

	<!-- 설정파일에서 사용할 프로퍼티의 파일의 경로 지정: classpath  (sqlMapConfig경로) -->
	<properties resource="config/mybatis/db.properties"/>
	
	<!-- SQL의 결과를 담을 VO 객체들의 별칭을 설정하여 사용의 편의를 도모
		  해당VO 타입의 별칭을 줘서 짧게 하기 위해
	  -->
	<typeAliases>  <!-- VO객체 타입의 alias 설정!  -->
 	<typeAlias alias="Board" type="kr.co.fishbang.repository.domain.Board"/> 
 	<typeAlias alias="ThumbNail" type="kr.co.fishbang.repository.domain.Thumbnail"/> 
 	<typeAlias alias="FileDB" type="kr.co.fishbang.repository.domain.FileDB"/> 
 	<typeAlias alias="Member" type="kr.co.fishbang.repository.domain.Member"/> 
 	<typeAlias alias="Comment" type="kr.co.fishbang.repository.domain.Comment"/> 

	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="url" value="${url}" />
				<property name="driver" value="${driver}" />				<!-- Proterties 에있는 db.properties의 value가져온다 -->
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>


	<!-- 사용자가 직접 작성한 SQL 문장들이 
	들어있는 xml 파일의 위치  classpath  -->
	<mappers>
		<mapper resource="config/sqlmap/board.xml"/> 
		<mapper resource="config/sqlmap/memo.xml"/> 
		<mapper resource="config/sqlmap/file.xml"/> 
		<mapper resource="config/sqlmap/login.xml"/> 
		<mapper resource="config/sqlmap/signup.xml"/> 
		<mapper resource="config/sqlmap/comment.xml"/> 
	
	</mappers>
	
	
</configuration>